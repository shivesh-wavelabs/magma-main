[Unit]
Description=Magma hss service in FeG

[Service]
Type=simple
ExecStart=/usr/bin/envdir /var/opt/magma/envdir /var/opt/magma/bin/hss -logtostderr=true -v=0
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=hss
User=root
Restart=always
RestartSec=1s
StartLimitInterval=0
MemoryLimit=300M

[Install]
WantedBy=multi-user.target
