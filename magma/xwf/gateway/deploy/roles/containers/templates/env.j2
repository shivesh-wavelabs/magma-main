COMPOSE_PROJECT_NAME=xwf
DOCKER_REGISTRY={{ docker_registry }}
DOCKER_USERNAME={{ docker_user }}
DOCKER_PASSWORD={{ docker_pass }}
IMAGE_VERSION={{ image_version }}

ROOTCA_PATH=/var/opt/magma/certs/rootCA.pem
CONTROL_PROXY_PATH=/etc/magma/control_proxy.yml
CONFIGS_TEMPLATES_PATH=/etc/magma/templates

CERTS_VOLUME=/var/opt/magma/certs
CONFIGS_OVERRIDE_VOLUME=/var/opt/magma/configs
CONFIGS_DEFAULT_VOLUME=/etc/magma

ODS_ACCESS_TOKEN={{ ODS_ACCESS_TOKEN | replace('\n', '') | trim | urlencode }}
SCUBA_ACCESS_TOKEN={{ SCUBA_ACCESS_TOKEN | replace('\n', '') | trim | urlencode }}
AAA_ACCESS_TOKEN={{ AAA_ACCESS_TOKEN | replace('\n', '') | trim | urlencode }}
RADIUS_SECRET={{ RADIUS_SECRET }}
AAA_ENDPOINT={{ AAA_ENDPOINT }}
PARTNER_SHORTNAME={{ partner }}

HOST_DOCKER_INTERNAL={{ ansible_default_ipv4.address }}
