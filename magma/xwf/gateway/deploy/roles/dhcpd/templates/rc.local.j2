iptables -t mangle -A FORWARD -o gw0 -p tcp --tcp-flags SYN,RST SYN -j TCPMSS --set-mss {{ mss }}
iptables -t mangle -A FORWARD -i gw0 -p tcp --tcp-flags SYN,RST SYN -j TCPMSS --set-mss {{ mss }}
service dhcpd restart
